#pragma GCC optimize("O3,unroll-loops")
#pragma GCC target("avx2,bmi,bmi2,lzcnt,popcnt")
#include<bits/stdc++.h>
using namespace std;
#define fi first
#define se second
#define SZ(x) ((long long)(x).size())
#define rep(i,a,b) for (long long i=(a);i<(b);i++)
#define pq priority_queue
#define MP make_pair
#define pb push_back
#define ALL(x) (x).begin(),(x).end()
#define ll long long
#define pii pair<int,int>
#define debug(x) cerr<<#x<<"="<<x<<"\n"
#define endl "\n";

const ll maxn=2e5+5;
struct line{
    ll m,c;
    ll operator()(ll x){return m*x+c;}
}tree[maxn<<2];

void insert(ll l, ll r, line seg , ll p){
    if(l+1==r){
        if(seg(l)<tree[p](l))tree[p]=seg;
        return;
    }
    ll mid=l+r>>1,lc=p*2,rc=p*2+1;
    if(tree[p].m>seg.m)swap(tree[p],seg);
    if(seg(mid)>tree[p](mid)){
        swap(tree[p],seg);
        insert(mid,r,seg,rc);
    }else{
        insert(l,mid,seg,lc);
    }
}
ll query(ll l, ll r, ll x, ll p){
    if(l+1==r)return tree[p](x);
    ll mid=l+r>>1,lc=p*2,rc=p*2+1;
    if(x<mid) return max(tree[p](x),query(l,mid,x,lc));
    else return max(tree[p](x),query(mid,r,x,rc));
}
int main(){
    ios::sync_with_stdio(0);
	cin.tie(0);
    ll q;cin>>q;
    while(q--){
        ll o;cin>>o;
        if(o==1){
            line y;cin>>y.m>>y.c;
            insert(0,maxn,y,1);
        }else{
            ll a;cin>>a;cout<<query(0,maxn,a,1);
        }
    }
    return 0;
}
